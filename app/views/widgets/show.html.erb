<header class="widget-title">
  <h1 class="widget-title__name"><%= @widget.name %></h1>
  <h2 class="widget-title__id">ID #<%= styled_widget_id(@widget.widget_id) %></h2>
</header>

<% if flash[:notice].present? %>
  <aside>
    <%= flash[:notice] %>
  </aside>
<% end %>

<%= widget_rating_component(@widget) %>

<h3>
  Built by <%= @widget.manufacturer.name %>
  out of <%= @widget.manufacturer.address.country %>
</h3>
<%= link_to "/manufacturers/#{ @widget.manufacturer_id }" do %>
  View Manufacturer
<% end %>
